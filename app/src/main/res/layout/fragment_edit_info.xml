<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/tvTop"
            app:layout_constraintBottom_toBottomOf="@id/tvTop"
            android:background="@color/blueColorMain"
            android:paddingStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvTop"
            android:src="@drawable/ic_back_white"
            android:id="@+id/btBack"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="增加信息"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@id/btBack"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:background="@color/blueColorMain"
            android:id="@+id/tvTop"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvTop"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@id/btConfirm">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingHorizontal="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/tvPackageInfo"
                    android:layout_marginTop="12dp"
                    tools:text="abcabcabc"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tvPackageInfo"
                    android:layout_marginTop="12dp"
                    android:id="@+id/rcvPhoto"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/rcvPhoto"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="选择图片"
                    android:textSize="17sp"
                    android:textColor="@color/blueColorMain"
                    android:id="@+id/tvImportPhoto"
                    android:layout_marginTop="12dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edt"
                    app:layout_constraintTop_toBottomOf="@id/tvImportPhoto"
                    android:layout_marginTop="12dp"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="12dp"
                    android:text="1"
                    android:hint="0"
                    android:textColor="@color/black"
                    android:textColorHint="#C8C8C8"
                    android:inputType="number"
                    android:id="@+id/edtQuantity"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edt"
                    app:layout_constraintTop_toBottomOf="@id/edtQuantity"
                    android:layout_marginTop="12dp"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="12dp"
                    android:hint="kg/m3"
                    android:textColorHint="#C8C8C8"
                    android:textColor="@color/black"
                    android:inputType="numberDecimal"
                    android:id="@+id/edtWeight"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edt"
                    app:layout_constraintTop_toBottomOf="@id/edtWeight"
                    android:layout_marginTop="12dp"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="12dp"
                    android:hint="运费"
                    android:textColor="@color/black"
                    android:textColorHint="#C8C8C8"
                    android:inputType="numberDecimal"
                    android:id="@+id/edtShippingFee"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/bg_edt"
                    app:layout_constraintTop_toBottomOf="@id/edtShippingFee"
                    android:layout_marginTop="12dp"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="12dp"
                    android:hint="备注"
                    android:gravity="top"
                    android:textColor="@color/black"
                    android:textColorHint="#C8C8C8"
                    android:inputType="text"
                    android:id="@+id/edtNote"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blueColorMain"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="创建订单"
            android:id="@+id/btConfirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>